<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/moodInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvAskMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_question"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/emojiContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emojiHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜„"
                android:textSize="32sp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/emojiNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜"
                android:textSize="32sp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/emojiSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜”"
                android:textSize="32sp"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etMoodNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mood_note_hint"/>

        <Button
            android:id="@+id/btnToggleChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/show_mood_trend" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMoods"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/moodInputContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/moodLineChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/moodInputContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSaveMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="@string/fab_save_mood_desc"
        app:tint="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>