<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Mood input area -->
    <LinearLayout
        android:id="@+id/moodInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAskMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling?"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/emojiContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emojiHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😄"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/emojiNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😐"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/emojiSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="😔"
                android:textSize="32sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etMoodNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a note (optional)" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMoods"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/moodInputContainer"
        app:layout_constraintBottom_toTopOf="@id/fabSaveMood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Save button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSaveMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Save Mood"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>