<?xml version="1.0" encoding="utf-8"?>
<!-- File: app/src/main/res/navigation/nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment"> <!-- App now starts at Login -->

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.wellnesstracker.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.wellnesstracker.ui.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- - MAIN APP FLOW - -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.wellnesstracker.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <!-- Add actions from Home to other fragments if needed, or let BottomNav handle direct selection -->
    </fragment>

    <fragment
        android:id="@+id/habitsFragment"
        android:name="com.example.wellnesstracker.ui.HabitsFragment"
        android:label="Habits"
        tools:layout="@layout/fragment_habits" />

    <fragment
        android:id="@+id/moodFragment"
        android:name="com.example.wellnesstracker.ui.MoodFragment"
        android:label="Mood Journal"
        tools:layout="@layout/fragment_mood" />

    <fragment
        android:id="@+id/hydrationFragment"
        android:name="com.example.wellnesstracker.ui.HydrationFragment"
        android:label="Hydration"
        tools:layout="@layout/fragment_hydration" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.wellnesstracker.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>