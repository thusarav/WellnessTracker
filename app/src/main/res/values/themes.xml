<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WellnessTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ... (existing color definitions like colorPrimary, colorSecondary, etc.) ... -->

        <!-- New: Default styles for Material Buttons and FABs -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <!-- New: Default style for outline buttons -->
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>

        <!-- Status bar color (ensure this points to a color, not ?attr) -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <!-- New: Custom style for filled Material Buttons -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- New: Custom style for Material Floating Action Buttons -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="tint">@color/colorOnSecondary</item>
    </style>

    <!-- New: Custom style for Outlined Buttons (used for Logout, or secondary actions) -->
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>